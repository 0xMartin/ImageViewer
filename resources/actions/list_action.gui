      height="100%" mode="0" value="50" fill="white">
      <set href="group/text" attributeName="text-length" to="25" />
      <set href="group/separator" attributeName="width" to="150" />
    </use>
    
    <!-- TOUCH AREA -->
    <rect id="touch" pointer-events="all" />
  </symbol>
  
